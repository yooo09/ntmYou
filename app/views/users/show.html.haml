.user-show
  .post-content
    .post
      - @post.each do |post|
        = link_to post_path(post.id), class:"link_tag" do
          .box
            .box__left
              .box__left__image
                = image_tag post.image.url, class: 'post__imagge-url' if post.image.present?
            .box__right
              .box__right__ntmy-day
                = post.created_at.strftime("%Y/%m/%d")
                .right-list
                  - if post.animal.present?
                    .right-list__animal
                      = post.animal
                  - if post.food.present?
                    .right-list__food
                      = post.food
                  - if post.aura_color.present?
                    .right-list__aura_color
                      = post.aura_color
              .box__right__keyword1
                = post.keyword1
              .box__right__keyword2
                = post.keyword2
              .box__right__keyword3
                = post.keyword3
      = paginate(@posts)
  = render partial: 'posts/footer'